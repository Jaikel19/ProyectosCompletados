<div class="create text-center create-container">
    <a class="btn btn-primary" style="width: 100%;" asp-area="" asp-controller="Events" asp-action="CreateEvent">Crear Evento</a>
</div>
<!-- CHATBOT -->
<div class="chat-bar-collapsible">
    <button id="chat-button" type="button" class="collapsible">
        ChatBot
        <i id="chat-icon" class="fa fa-fw fa-comments-o"></i>
    </button>
    <div class="content">
        <div class="full-chat-block">
            <!--contenedor del mensaje-->
            <div class="outer-container">
                <div class="chat-container">
                    <!--msj-->
                    <div id="chatbox">
                        <h5 id="chat-time"></h5>
                        <p id="botStarterMessage" class="botText"><span>Prueba usar el ChatBot</span></p>
                    </div>
                    <!--user input-->
                    <div class="chat-bar-input-block">
                        <div id="userInput">
                            <input id="textInput" class="input-box" type="text" name="msg"
                                   placeholder="Presiona 'ENTER' para envíar el mensaje">
                            <p></p>
                        </div>

                        <div class="chat-bar-icons">
                            <i id="chat-icon" style="color: #333;" class="fa fa-fw fa-send"
                               onclick="sendButton()"></i>
                        </div>
                    </div>
                    <div id="chat-bar-bottom">
                        <p></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
