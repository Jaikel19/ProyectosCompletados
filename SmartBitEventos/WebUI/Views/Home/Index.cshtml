    <script src="~/js/Pages/Home/HomePage.js"></script>
    <script src="~/js/ChatBot/ChatBot.js"></script>
}
<link rel="stylesheet" href="~/css/Home/Home.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/ChatBot/ChatBot.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<!--page title-->
<div class="text-center" style="margin: 40px;">
    <h1 class="display-4">SmartBit Eventos</h1>
</div>

<!--promotions section-->
<div id="myGrid"></div>

