@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accesor
@{
    bool isLoggedIn = Accesor.HttpContext.Session.GetString("user") != null;
    bool admin = Accesor.HttpContext.Session.GetInt32("userRole") == 1;
    bool comprador = Accesor.HttpContext.Session.GetInt32("userRole") == 2;
    bool gestor = Accesor.HttpContext.Session.GetInt32("userRole") == 4;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteS.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebUI.styles.css" asp-append-version="true" />
    <div id="loader" class="center">
    </div>

    <link rel="stylesheet" href="~/WebUI.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://bootswatch.com/3/flatly/bootstrap.min.css">
</head>
<body>
    <header style="padding-bottom: 100px;">
        
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse" style="margin-bottom: 120px; background-color: #1E1D1C; margin-top: 0px;">
            <div class="position-sticky">
                <div class="list-group list-group-flush mt-0" style="margin-left: 30px;">

                    <a href="@Url.Action("Index","Home")"
                       class="text-align-center align-center py-2 ripple" style="color: white; background-color:#1E1D1C;">
                        <img src="~/Img/logo2.png" height="180" alt="" loading="lazy" style="margin-left: 17px;" class="me-2 d-inline-block align-text-center" asp-controller="Home" asp-action="Index" />
                    </a>
                    <a href="@Url.Action("Index","Home")"
                       class="text-align-center align-center align-items-center py-2 ripple" style="color: white; background-color:#1E1D1C; margin-left: 57px; margin-bottom: 35px;">
                       <big>SmartBit</big>
                    </a>


                    <!--------------------------------------------------------------------------------------------->
                    <!--               Usuario Administrador              -->
                    @if (admin) 
                    
            {
                    <a href="@Url.Action("AdminDashboard","Dashboard")"
                       class="list-group-item list-group-item-action py-2 ripple" style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-chart-line icono fa-fw me-3 mt-5"></i><span>Dashboard</span>
                    </a>
                    <a href="@Url.Action("ReporteGanancias","Reportes")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-circle-dollar-to-slot fa-fw icono me-3 mt-5"></i><span>Ganancias</span>
                    </a>
                    <a href="@Url.Action("LoggedEvents","Reportes")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Eventos</span>
                    </a>
                    <a href="@Url.Action("ReporteAuditoria","Reportes")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-list fa-fw me-3 icono mt-5"></i><span>Auditoria</span>
                    </a>
                    <a href="@Url.Action("UserList","Admin")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user fa-fws me-3 icono mt-5"></i><span>Usuarios</span>
                    </a>
                    <a href="@Url.Action("Finances","Admin")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-coins fa-fw me-3 icono mt-5"></i><span>Membresías</span>
                    </a>
                    }
                    <!--               Usuario Administrador              -->
                    <!--------------------------------------------------------------------------------------------->




                    <!--------------------------------------------------------------------------------------------->
                    <!--               Usuario Gestor de Eventos              -->
                @if (gestor){
                    <a href="@Url.Action("GestorDashboard","Dashboard")"
                       class="list-group-item list-group-item-action py-2 ripple" style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-chart-line icono fa-fw me-3 mt-5"></i><span>Dashboard</span>
                    </a>
                    <a href="@Url.Action("ReporteRendimientoPersonal","Reportes")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Rendimiento personal</span>
                    </a>
                    <a href="@Url.Action("ReporteGestor","Reportes")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Mis eventos</span>
                    </a>
                    <a href="@Url.Action("ReadQR","User")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Lector QR</span>
                        </a>
                        <a href="@Url.Action("Events","CreateEvent")"
                        class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Crear Evento</span>
                     </a>


                    <!--               Usuario Gestor de Eventos              -->
                    <!--------------------------------------------------------------------------------------------->

                    }



                    <!--------------------------------------------------------------------------------------------->
                    <!--                 Usuario Comprador                 -->
                    @if (comprador)
                    {
                        <a href="@Url.Action("CompradorDashboard","Dashboard")"
                        class="list-group-item list-group-item-action py-2 ripple" style="color: white; background-color:#1E1D1C;">
                            <i class="fas fa-chart-line icono fa-fw me-3 mt-5"></i><span>Dashboard</span>
                        </a>
                        <a href="@Url.Action("ReporteComprador","Reportes")"
                        class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                            <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Mis eventos</span>
                        </a>
                        <a href="@Url.Action("ReporteBoletos","Reportes")"
                        class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                            <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Mis boletos</span>
                        </a>
                    }
                    <!--                 Usuario Comprador                 -->
                    <!--------------------------------------------------------------------------------------------->




                    <!--------------------------------------------------------------------------------------------->
                    <!--                 Todos los usuarios                -->

                    <a href="@Url.Action("ProfileEdit","User")"
                       class="list-group-item list-group-item-action py-2 ripple " style="color: white; background-color:#1E1D1C;">
                        <i class="fas fa-user-circle fa-fw me-3 icono mt-5"></i><span>Editar Perfil</span>
                    </a>

                    <!--                 Todos los usuarios                -->
                    <!--------------------------------------------------------------------------------------------->


                </div>
            </div>
        </nav>
        <!-- Sidebar -->

        <!-- Navbar -->
        <nav id="main-navbar"
             class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#sidebarMenu"
                        aria-controls="sidebarMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand" style="padding-top: 5px;" href="#">
                    <img src=" " height="50" alt="" loading="lazy" class="me-2 d-inline-block align-text-center" asp-controller="Home" asp-action="Index" />
                    <big> </big>
                </a>

                <!-- Right links -->
                <ul class="navbar-nav ms-auto d-flex flex-row">
                    <!-- Notification dropdown -->
                    @if (isLoggedIn)
                    {

                        var user = "Bienvenido " + Accesor.HttpContext.Session.GetString("user");
                        <li class="nav-item">
                            <a class="nav-link text-dark">@user</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile">Mi perfil</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Equipo" asp-action="Equipo">Nosotros</a>
                    </li>
                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Registrarse</a>
                        </li>
                    }
                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Suscripcion" asp-action="Suscripcion">Suscripción</a>
                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <!-- Navar -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer id="footer" style="color:white; background-color:#1E1D1C; text-align:center;">
        <div class="container">
            <div class="container">
                <img src="~/Img/Footer.png" class="" height="90px" width="110px" alt="" class=" " asp-controller="Home" asp-action="Index" />
            </div>
            <div class="container">
                &copy; 2023 - Grupo3 -
                <a style="color: white;" asp-area="" asp-controller="Equipo" asp-action="Equipo">Nosotros</a>
                <p> </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/1564ee1284.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<div id="loader" class="center" style="visibility : hidden"></div>
