<body>
    <div class="container text-center">
        <h1 class="display-4">Regístrese Con Nosotros</h1>
    </div>

    <div class="row" style="width:1320px; margin-top:30px;">
        <div class="col">
            <button id="boton1" class="btn btn-primary" style="width: 100%;">Paso 1</button>
        </div>
        <div class="col">
            <button id="boton2" class="btn btn-primary" style="width: 100%;">Paso 2</button>
        </div>
    </div>
    <div class="form-group">
        <form id="UserRegister" asp-action="RegistroUsuario" asp-controller="User" method="POST">
            <fieldset>
                <br>
                <legend>Nuevo Usuario</legend>
                <br>
                <div id="informacion1" class="d-none mt-3" style="min-height: 700px;">
                    <div class="form-group">
                        <label class="form-label">Nombre:</label>
                        <input type="text" class="form-control emptyInput" id="Nombre" name="Nombre">
                        <label style="display: none; color: red;">*Debes indicar tu nombre en un formato válido.</label>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Apellido:</label>
                        <input type="text" class="form-control emptyInput" id="Apellido" name="Apellido">
                        <label style="display: none; color: red;">*Debes indicar tu apellido en un formato válido.</label>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email:</label>
                        <input type="email" class="form-control emptyInput" id="Email" name="Email">
                        <label style="display: none; color: red;">*Debes seguir un formato válido de email, por ejemplo: usuario@dominio.com</label>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Contraseña:</label>
                        <input type="password" class="form-control emptyInput" id="Password" name="Password">
                        <label style="display: none; color: red;">*Debes indicar una contraseña de 8 caracteres con al menos 1 número y 1 mayúscula.</label>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Cédula:</label>
                        <input type="text" class="form-control emptyInput" id="Cedula" name="Cedula">
                        <label style="display: none; color: red;">*Debes indicar tu número de cédula en formato de 10 dígitos.</label>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label">Cargar imagen de cédula:</label>
                        <input type="file" class="form-control emptyInput" id="CedulaImagen" name="CedulaImagen">
                        <label style="display: none; color: red;">*Debes adjuntar una imagen de tu cédula.</label>
                    </div>
                    <div class="form-group">
                        <br />
                        <label class="form-label">Teléfono:</label>
                        <input type="text" class="form-control emptyInput" id="Telefono" name="Telefono">
                        <label style="display: none; color: red;">*El telefono debe contener 8 dígitos.</label>
                        <br />
                    </div>
                </div>

                <div id="informacion2" class="d-none mt-3" style="min-height: 700px;">

                    <label class="control-label">Dirección:</label>

                    <div class="form-group">
                        <label class="form-label">Latitud:</label>
                        <input type="text" class="form-control" id="latitud" name="latitud" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Longitud:</label>
                        <input type="text" class="form-control emptyInput" id="longitud" name="longitud" readonly>
                        <label style="display: none; color: red;">*Debes seleccionar una ubicación del evento en el mapa.</label>
                    </div>

                    <label class="col-form-label mt-4" for="inputMap">Mapa:</label>

                    <div id="map" style="height: 400px; margin-top: 20px;"></div>
                    <br />
                </div>
                <div class="btn-container" style="margin-bottom: 5px;">
                    <button class="btn btn-primary" style="width: 100%;" id="btnCreate" asp-action="Event" asp-controller="User">Registrarme</button>
                </div>
            </fieldset>
        </form>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Mostrar información 1 por defecto
            $("#informacion1").removeClass("d-none");
            $("#informacion1").addClass("d-block");

            $("#boton1").click(function () {
                $("#informacion1").removeClass("d-none");
                $("#informacion1").addClass("d-block");
                $("#informacion2").removeClass("d-block");
                $("#informacion2").addClass("d-none");
            });

            $("#boton2").click(function () {
                $("#informacion1").removeClass("d-block");
                $("#informacion1").addClass("d-none");
                $("#informacion2").removeClass("d-none");
                $("#informacion2").addClass("d-block");
            });

        });
    </script>
</body>

